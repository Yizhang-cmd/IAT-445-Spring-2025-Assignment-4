using UnityEngine;

public class DinosaurController : MonoBehaviour
{
    private Animator animator;

    void Start()
    {
        animator = GetComponent<Animator>();
    }

    void Update()
    {
        // ü¶ñ Idle (A Button - Oculus Right Controller)
        if (OVRInput.GetDown(OVRInput.Button.One, OVRInput.Controller.RTouch))
        {
            animator.Play("Idle");
            Debug.Log("Idle triggered!");
        }

        // üèÉ Run (Right Thumbstick Press)
        if (OVRInput.GetDown(OVRInput.Button.PrimaryThumbstick, OVRInput.Controller.RTouch))
        {
            animator.SetBool("IsRunning", true);
            Debug.Log("Run started!");
        }
        else if (OVRInput.GetUp(OVRInput.Button.PrimaryThumbstick, OVRInput.Controller.RTouch))
        {
            animator.SetBool("IsRunning", false);
            Debug.Log("Run stopped!");
        }

        // ü¶ñ Roar (B Button - Oculus Right Controller)
        if (OVRInput.GetDown(OVRInput.Button.Two, OVRInput.Controller.RTouch))
        {
            animator.SetTrigger("RoarTrigger");
            Debug.Log("Roar triggered!");
        }

        // ‚öîÔ∏è Attack (Right Hand Grip Button)
        if (OVRInput.GetDown(OVRInput.Button.PrimaryHandTrigger, OVRInput.Controller.RTouch))
        {
            animator.SetTrigger("AttackTrigger");
            Debug.Log("Attack triggered!");
        }

        // üíÄ Death (Right Index Trigger)
        if (OVRInput.GetDown(OVRInput.Button.PrimaryIndexTrigger, OVRInput.Controller.RTouch))
        {
            animator.SetTrigger("DeathTrigger");
            Debug.Log("Death triggered!");
        }
    }
}
